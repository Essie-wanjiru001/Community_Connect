const express = require('express');
const router = express.Router();
const bookingController = require('../controllers/bookingController');
const authMiddleware = require('../middlewares/authMiddleware');

// Apply auth middleware to all routes
router.use(authMiddleware);

// Get available slots for a specific artisan on a given date
router.get('/available-slots/:artisanId', bookingController.getAvailableSlots);

// Create a new booking
router.post('/create', bookingController.createBooking);

// Get all bookings for the current user (consumer)
router.get('/user', bookingController.getUserBookings);

// Get all bookings for the current artisan
router.get('/artisan', bookingController.getArtisanBookings);

// Update booking status
router.put('/:bookingId/status', bookingController.updateBookingStatus);

module.exports = router;